<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/history"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:textSize="30dp"
        android:layout_height="80dp"
        android:gravity="right"
         />

    <TextView
        android:id="@+id/main1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="50dp"
        android:layout_below="@+id/history"
        android:gravity="right"
        android:scrollbars="horizontal"
        />

    <TextView
        android:id="@+id/main2"
        android:layout_width="match_parent"
        android:textSize="50dp"
        android:layout_height="60dp"
        android:gravity="right"
        android:layout_below="@id/main1"

        />
    <Button
        android:id="@+id/empty"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="C"
        android:textSize="50dp"
        android:textColor="#FF8C00"
        android:background="#FFFFFF"
        android:layout_below="@id/main2"
        />
    <Button
        android:id="@+id/delete"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="←"
        android:textSize="50dp"
        android:textColor="#FF8C00"
        android:background="#FFFFFF"
        android:layout_below="@id/main2"
        android:layout_toRightOf="@id/empty"
        />
    <Button
        android:id="@+id/percent"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="%"
        android:textSize="50dp"
        android:textColor="#FF8C00"
        android:background="#FFFFFF"
        android:layout_below="@id/main2"
        android:layout_toRightOf="@id/delete"
        />
    <Button
        android:id="@+id/division"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="÷"
        android:textSize="50dp"
        android:textColor="#FF8C00"
        android:background="#FFFFFF"
        android:layout_below="@id/main2"
        android:layout_toRightOf="@id/percent"
        />
    <Button
        android:id="@+id/num7"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="7"
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_below="@id/empty"
        />
    <Button
        android:id="@+id/num8"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="8"
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_below="@id/empty"
        android:layout_toRightOf="@id/num7"
        />
    <Button
        android:id="@+id/num9"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="9"
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_below="@id/empty"
        android:layout_toRightOf="@id/num8"
        />
    <Button
        android:id="@+id/num4"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="4"
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_below="@id/num7"
        />
    <Button
        android:id="@+id/num5"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="5"
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_below="@id/num7"
        android:layout_toRightOf="@id/num4"
        />
    <Button
        android:id="@+id/num6"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="6"
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_below="@id/num7"
        android:layout_toRightOf="@id/num5"
    />
    <Button
        android:id="@+id/num1"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="1"
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_below="@id/num4"
    />
    <Button
        android:id="@+id/num2"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="2"
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_below="@id/num4"
        android:layout_toRightOf="@id/num1"
    />
    <Button
        android:id="@+id/num3"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="3"
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_below="@id/num4"
        android:layout_toRightOf="@id/num2"
    />
    <Button
        android:id="@+id/more1"
        android:layout_width="53dp"
        android:layout_height="80dp"
        android:text="("
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_below="@id/num1"
    />
    <Button
        android:id="@+id/more2"
        android:layout_width="52dp"
        android:layout_height="80dp"
        android:text=")"
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_below="@id/num1"
        android:layout_toRightOf="@+id/more1"
        />
    <Button
        android:id="@+id/num0"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="0"
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_below="@id/num1"
        android:layout_toRightOf="@id/more2"
    />
    <Button
        android:id="@+id/point"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="."
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_below="@id/num1"
        android:layout_toRightOf="@id/num0"
    />
    <Button
        android:id="@+id/mult"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="×"
        android:textSize="60dp"
        android:textColor="#FF8C00"
        android:background="#FFFFFF"
        android:layout_below="@id/division"
        android:layout_toRightOf="@id/num9"
    />
    <Button
        android:id="@+id/sub"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="－"
        android:textSize="50dp"
        android:textColor="#FF8C00"
        android:background="#FFFFFF"
        android:layout_below="@id/mult"
        android:layout_toRightOf="@id/num6"
    />
    <Button
        android:id="@+id/add"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="＋"
        android:textSize="50dp"
        android:textColor="#FF8C00"
        android:background="#FFFFFF"
        android:layout_below="@id/sub"
        android:layout_toRightOf="@id/num3"
    />
    <Button
        android:id="@+id/equal"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:text="＝"
        android:textSize="50dp"
        android:textColor="#FF8C00"
        android:background="#FFFFFF"
        android:layout_below="@id/add"
        android:layout_toRightOf="@id/point"
    />

</RelativeLayout>